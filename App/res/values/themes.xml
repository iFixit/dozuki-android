<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Base.TransparentActionBar" parent="Theme.Base">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/black_alpha_40</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="doz__guidePagerTitleBackground">@color/black</item>
        <item name="doz__guidePagerTitleTextColor">@color/white</item>
        <item name="doz__guidePagerTitleFooterColor">?attr/colorPrimary</item>
        <item name="doz__menuIconColor">@color/white</item>

        <item name="doz__tabIndicatorColor">@color/black</item>

        <item name="doz__toolbarStyle">@style/Base.Toolbar</item>
        <item name="doz__toolbarPopupStyle">@style/Base.Toolbar.Popup</item>
        <item name="doz__textColorPrimary">@color/black</item>
        <item name="doz__textColorSecondary">@color/gray_7</item>
        <item name="doz__background">@color/white</item>
        <item name="doz__imageBorder">@color/image_border</item>
        <item name="doz__topicDefaultBackground">@style/Widget.iFixit.TopicBackground</item>
        <item name="doz__topicGuideList">@style/ListView</item>
        <item name="doz__listViewStyle">@style/ListView</item>

        <!-- Action Bar Logo -->
        <item name="logo">@android:color/transparent</item>
        <item name="icon">@android:color/transparent</item>
        <item name="android:icon">@android:color/transparent</item>

        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_24dp</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_24dp</item>

        <!-- Holo Theme -->
        <item name="dividerHorizontal">?android:listDivider</item>
        <item name="dividerVertical">?android:listDivider</item>
        <item name="listPreferredItemHeightSmall">48dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>

        <item name="android:colorBackground">?doz__background</item>
        <item name="android:windowBackground">?doz__background</item>

        <item name="buttonBarStyle">@style/Base.ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/Base.Button.Borderless</item>
        <item name="android:buttonStyle">@style/Base.Button</item>

        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:listViewWhiteStyle">@style/ListView.White</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <!-- We have to have these stub theme definitions to prevent compiler errors when building different flavors of the app -->

    <style name="Theme.iFixit" parent="Theme.Base"></style>

    <style name="Theme.Accustream" parent="Theme.Base"></style>

    <style name="Theme.HyperthermToolkit" parent="Theme.Base"></style>

