<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:clickable="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardListItem">

    <RelativeLayout
            android:id="@+id/search_result_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            style="@style/CardListItemInner">

        <ImageView
                android:id="@+id/guide_thumbnail"
                style="@style/ListItemThumbnail"
                android:contentDescription="@string/guide_search_thumbnail_content_description"/>

        <TextView
                android:id="@+id/guide_title"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:layout_toRightOf="@+id/guide_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/guide_author"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:layout_below="@+id/guide_title"
                android:layout_toRightOf="@+id/guide_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>